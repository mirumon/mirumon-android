<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Design.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/colorPrimary</item>
        <item name="android:colorBackground">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>

    <style name="AccentTextView">
        <item name="android:textColor">@color/colorAccentFont</item>
    </style>

    <style name="RegularTextView">
        <item name="android:textColor">@color/colorMainFont</item>
    </style>

    <style name="RegularButton">
        <item name="android:background">@drawable/text_background</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_height">@dimen/field_height</item>
        <item name="android:paddingStart">@dimen/dp_10</item>
        <item name="android:paddingEnd">@dimen/dp_10</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:drawablePadding">@dimen/dp_10</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="CustomButtonTextView">
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="softwareLabelItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textColor">@color/colorMainFont</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="softwareListDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginStart">@dimen/dp_10</item>
        <item name="android:layout_marginEnd">@dimen/dp_10</item>
        <item name="android:background">#21000000</item>
    </style>

    <style name="softwareInfoItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/dp_10</item>
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textColor">@color/colorAccentFont</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="groupInfoItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/dp_10</item>
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textColor">@color/colorAccentFont</item>
    </style>

    <style name="groupColorIndicator">
        <item name="android:layout_width">@dimen/dp_group_indicator_aspect</item>
        <item name="android:layout_height">@dimen/dp_group_indicator_aspect</item>
        <item name="android:layout_marginEnd">@dimen/dp_5</item>
    </style>

    <style name="overviewFragmentInfo">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/dp_15</item>
        <item name="android:layout_marginTop">@dimen/dp_5</item>
        <item name="android:layout_marginEnd">@dimen/dp_15</item>
        <item name="android:background">@drawable/text_background</item>
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:padding">@dimen/dp_5</item>
        <item name="android:paddingStart">@dimen/dp_10</item>
        <item name="android:textColor">@color/colorAccentFont</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="overviewFragmentLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/dp_20</item>
        <item name="android:layout_marginEnd">@dimen/dp_15</item>
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textColor">@color/colorMainFont</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="activityDeviceLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorMainFont</item>
        <item name="android:layout_marginEnd">@dimen/dp_15</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="activityDeviceInfo">
        <item name="android:textColor">@color/colorAccentFont</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dp_5</item>
        <item name="android:layout_marginEnd">@dimen/dp_15</item>
        <item name="android:background">@drawable/text_background</item>
        <item name="android:padding">5dp</item>
        <item name="android:paddingStart">@dimen/dp_10</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="activityMainImageButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/dp_20</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

</resources>
